    <link rel="stylesheet" href="./style.css" type="
    text/css" media="screen" charset="utf-8" />
    <link rel="stylesheet" href="./slimbar.css" type="
    text/css" media="screen" charset="utf-8" />
    <script type="text/javascript" src="./jquery.js">//</script>
    <script type="text/javascript" src="./dropdown.js">//</script>
    <!-- <base href="http://plone.it/" /> -->
  </head>
  <body>
    <!-- slimbar -->
    <div class="navbar" id="slimbar">
      <div class="navbar-inner">
       <div class="container">
        <a href="http://plone.org">plone.org</a>
        <dl class="actionMenu deactivated">
          <dt class="actionMenuHeader">
            <a href="#">plone in the world</a>
          </dt>
          <dd class="navbar actionMenuContent">
            <ul class="dropdown-menu">
                  <li><a href="http://plone.de">plone.de</a></li>
                  <li><a href="http://plone.fr">plone.fr</a></li>
                  <li><a href="http://plone.it">plone.it</a></li>
                  <li><a href="http://plone.jp">plone.jp</a></li>
                  <li><a href="http://plone.org.br">plone.org.br</a></li>
                  <li><a href="http://plone.org.pl/">plone.org.pl</a></li>
            </ul>
          </dd>
        </dl></div>
      </div>
    </div>

    <div id="outer-wrapper">
      <div id="inner-wrapper">
        <div id="portal-header">

<!--           <div id="portal-searchbox">
            <form action="http://plone.it/search"
                  id="livesearch0" name="searchform">
              <div class="LSBox">
                <label for="searchGadget"
                    class="hiddenStructure">Cerca nel sito</label>
                  <input type="text" id="searchGadget"
                    class="searchField inputLabel inputLabelActive"
                    accesskey="4" title="Cerca nel sito"
                    size="18" name="SearchableText"
                    autocomplete="off" />
                  <input type="submit"
                    value="Cerca" class="searchButton" />
              </div>

            </form>
          </div> -->

